<manifest package="com.afterroot.allusive"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Dark"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <meta-data
            android:name="xposedmodule"
            android:value="true"/>
        <meta-data
            android:name="xposedminversion"
            android:value="42"/>
        <meta-data
            android:name="xposeddescription"
            android:value="@string/xmodule_description"/>

        <activity
            android:name="com.afterroot.allusive.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark.Launch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.afterroot.allusive.SettingsActivity"
            android:label="@string/title_activity_settigs"
            android:launchMode="singleTop"
            android:parentActivityName="com.afterroot.allusive.MainActivity"
            android:theme="@style/AppTheme.AppBar">
        </activity>
        <activity
            android:name="com.afterroot.allusive.PointerPreview"
            android:label="@string/title_activity_pointer_preview"
            android:launchMode="singleTop"
            android:parentActivityName="com.afterroot.allusive.MainActivity"
            android:theme="@style/AppTheme.Dark">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.afterroot.allusive.MainActivity"/>
        </activity>
        <activity
            android:name="com.afterroot.allusive.AboutActivity"
            android:label="@string/title_activity_about"
            android:launchMode="singleTop"
            android:parentActivityName="com.afterroot.allusive.MainActivity"
            android:theme="@style/AppTheme.AppBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.afterroot.allusive.MainActivity"/>
        </activity>
        <activity android:name="com.afterroot.allusive.ManagePointerActivity"
            android:label="@string/title_activity_manage_pointer"
            android:launchMode="singleTop"
            android:parentActivityName="com.afterroot.allusive.MainActivity"
            android:theme="@style/AppTheme.Dark">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.afterroot.allusive.MainActivity"/>
        </activity>

        <service android:name=".fcm.FireMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service android:name=".fcm.FireInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>