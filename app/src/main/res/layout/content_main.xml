<com.flipboard.bottomsheet.BottomSheetLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottomSheet"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="afterroot.pointerreplacer.MainActivity"
    tools:showIn="@layout/app_bar_main"
    tools:ignore="ContentDescription,RtlHardcoded">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/content_padding_vertical"
        android:paddingTop="@dimen/content_padding_vertical">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/slidersCard"
            android:layout_marginBottom="@dimen/content_margin">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    card_view:cardCornerRadius="@dimen/card_radius">

                    <RelativeLayout
                        android:id="@+id/currPointerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/image_current_pointer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:foregroundGravity="center"
                            android:src="@drawable/pointer" />

                        <TextView
                            android:id="@+id/textNoPointerApplied"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/content_padding"
                            android:text="@string/no_pointer_applied" />

                        <TextView
                            android:id="@+id/textCurrentPointer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/image_current_pointer"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignTop="@id/image_current_pointer"
                            android:gravity="center_vertical"
                            android:text="@string/text_cur_pointer"
                            tools:ignore="RelativeOverlap" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/content_margin"
                    app:cardCornerRadius="@dimen/card_radius">

                    <RelativeLayout
                        android:id="@+id/selectedPointerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textSelectedPointer"
                            android:layout_centerHorizontal="true">

                            <ImageView
                                android:id="@+id/pointerSelected"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/pointer" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textSelectedPointer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/buttonChangePointer"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignTop="@id/buttonChangePointer"
                            android:layout_gravity="left|center_vertical"
                            android:layout_toLeftOf="@+id/buttonChangePointer"
                            android:layout_toStartOf="@+id/buttonChangePointer"
                            android:gravity="center_vertical"
                            android:text="@string/text_will_change_to" />

                        <Button
                            android:id="@+id/buttonChangePointer"
                            style="?attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:onClick="showPointerChooser"
                            android:text="@string/change_pointer" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <android.support.v7.widget.CardView
            android:id="@+id/slidersCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom"
            card_view:cardCornerRadius="@dimen/card_radius">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/textSizePadding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="70"
                        android:textColor="@color/color_text_primary"
                        tools:ignore="RelativeOverlap" />

                    <TextView
                        android:id="@+id/textPadding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="70"
                        android:textColor="@color/color_text_primary"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textAlpha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="70"
                        android:textColor="@color/color_text_primary"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />

                <RelativeLayout
                    android:id="@+id/slidersLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <RelativeLayout
                        android:id="@+id/relativeLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/butMinus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:onClick="changeSeekVal"
                            android:padding="@dimen/seek_button_padding"
                            android:src="@drawable/ic_action_minus" />

                        <ImageView
                            android:id="@+id/butPlus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:onClick="changeSeekVal"
                            android:padding="@dimen/seek_button_padding"
                            android:src="@drawable/ic_action_plus"
                            android:layout_alignParentRight="true" />

                        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_toLeftOf="@+id/butPlus"
                            android:layout_toRightOf="@+id/butMinus"
                            android:layout_toStartOf="@+id/butPlus"
                            app:dsb_indicatorColor="@color/col_seek_bubble"
                            app:dsb_indicatorFormatter="Size:%s"
                            app:dsb_indicatorTextAppearance="@android:color/white"
                            app:dsb_max="300"
                            app:dsb_min="25"
                            app:dsb_progressColor="@color/col_seek_bubble"
                            app:dsb_rippleColor="@color/col_seek_ripple" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/padding_bar_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/relativeLayout2">

                        <ImageView
                            android:id="@+id/butPaddingMinus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:onClick="changeSeekVal"
                            android:padding="@dimen/seek_button_padding"
                            android:src="@drawable/ic_action_minus" />

                        <ImageView
                            android:id="@+id/butPaddingPlus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:onClick="changeSeekVal"
                            android:padding="@dimen/seek_button_padding"
                            android:src="@drawable/ic_action_plus"
                            android:layout_alignParentRight="true" />

                        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                            android:id="@+id/seekBarPadding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_toLeftOf="@+id/butPaddingPlus"
                            android:layout_toRightOf="@+id/butPaddingMinus"
                            android:layout_toStartOf="@+id/butPaddingPlus"
                            app:dsb_indicatorColor="@color/col_seek_bubble"
                            app:dsb_indicatorFormatter="Padding:%s"
                            app:dsb_indicatorTextAppearance="@android:color/white"
                            app:dsb_max="25"
                            app:dsb_min="0"
                            app:dsb_progressColor="@color/col_seek_bubble"
                            app:dsb_rippleColor="@color/col_seek_ripple" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/alpha_bar_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/padding_bar_container">

                        <ImageView
                            android:id="@+id/butAlphaMinus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:onClick="changeSeekVal"
                            android:padding="@dimen/seek_button_padding"
                            android:src="@drawable/ic_action_minus" />

                        <ImageView
                            android:id="@+id/butAlphaPlus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:onClick="changeSeekVal"
                            android:padding="@dimen/seek_button_padding"
                            android:src="@drawable/ic_action_plus"
                            android:layout_alignParentRight="true" />

                        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                            android:id="@+id/seekBarAlpha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_toLeftOf="@+id/butAlphaPlus"
                            android:layout_toRightOf="@+id/butAlphaMinus"
                            android:layout_toStartOf="@+id/butAlphaPlus"
                            app:dsb_indicatorColor="@color/col_seek_bubble"
                            app:dsb_indicatorFormatter="Alpha:%s"
                            app:dsb_indicatorTextAppearance="@android:color/white"
                            app:dsb_max="255"
                            app:dsb_min="0"
                            app:dsb_progressColor="@color/col_seek_bubble"
                            app:dsb_rippleColor="@color/col_seek_ripple" />
                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</com.flipboard.bottomsheet.BottomSheetLayout>