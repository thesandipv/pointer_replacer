<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="afterroot.pointerreplacer.UpdateActivity"
    tools:showIn="@layout/activity_update"
    android:id="@+id/main_layoutUpdate"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:paddingRight="@dimen/content_padding_horizontal"
    android:paddingTop="@dimen/content_padding"
    android:paddingBottom="@dimen/content_padding"
    android:paddingLeft="@dimen/content_padding_horizontal">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardView_update"
                app:contentPadding="@dimen/content_padding">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_current_version"
                        android:fontFamily="sans-serif-light"
                        android:textSize="@dimen/text_size_title"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/version"
                        android:id="@+id/textCurrentVersion"
                        android:fontFamily="sans-serif-light"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_margin"
                app:contentPadding="@dimen/content_padding">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_new_version"
                        android:fontFamily="sans-serif-light"
                        android:textSize="@dimen/text_size_title"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/version"
                        android:id="@+id/textNewVersion"
                        android:fontFamily="sans-serif-light"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="@dimen/content_padding"
                android:layout_marginTop="@dimen/content_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_whats_new"
                        android:textSize="20sp"
                        android:id="@+id/textWhatsNew"
                        android:fontFamily="sans-serif-light"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textNewChangelog"
                        android:fontFamily="sans-serif-light"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/content_margin"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_update_now"
            android:fontFamily="sans-serif-light"
            android:background="?attr/selectableItemBackground"
            android:text="@string/text_update_now"
            android:padding="@dimen/content_padding"
            android:textAllCaps="true"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/layoutNoConnection">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_no_connection"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRetry"
            android:text="@string/text_retry"
            android:fontFamily="sans-serif-light"
            android:enabled="true"
            android:textColor="@android:color/white"
            android:onClick="retry"/>
    </LinearLayout>

</RelativeLayout>